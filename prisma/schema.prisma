// Multi-file schema: generator + datasource + global enums only.
// All models live in prisma/models/*.prisma

datasource db {
  provider = "mysql"
}

generator client {
  provider = "prisma-client-js"
}

enum Status {
  DRAFT
  PUBLISHED
}

enum VariantType {
  THUMBNAIL
  MEDIUM
  LARGE
  WEBP
  AVIF
}

enum MediaStatus {
  processing
  ready
  failed
  deleted
}
