model User {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String
  roleId       String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  deletedAt    DateTime?

  role     Role?    @relation(fields: [roleId], references: [id], onDelete: SetNull)
  posts    Post[]
  comments Comment[]
  media    Media[]

  @@index([email])
  @@index([roleId])
}
